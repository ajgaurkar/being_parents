<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/guidance_faq_listitem_question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/milestone_listitem_title_collapsed"
        android:padding="5dp">


        <ImageView
            android:id="@+id/guidance_faq_expand_status_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/milestone_current_age_textView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/add_24" />

        <TextView
            android:id="@+id/guidance_faq_questions_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/guidance_faq_questions_no_text_view"
            android:layout_toLeftOf="@+id/guidance_faq_expand_status_image_view"
            android:layout_toRightOf="@+id/guidance_faq_questions_no_text_view"
            android:layout_toStartOf="@+id/guidance_faq_expand_status_image_view"
            android:padding="5dp"
            android:text="Questions guidance _faq expand_ status_ im"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guidance_faq_questions_no_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/guidance_faq_expand_status_image_view"
            android:padding="5dp"
            android:text="1."
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--<View-->
        <!--android:id="@+id/view14"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="5dp"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_below="@+id/milestone_listitem_body_layout" />-->

    <RelativeLayout
        android:id="@+id/guidance_faq_listitem_answer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/guidance_faq_listitem_question_layout"
        android:layout_alignLeft="@+id/guidance_faq_listitem_question_layout"
        android:layout_alignRight="@+id/guidance_faq_listitem_question_layout"
        android:layout_alignStart="@+id/guidance_faq_listitem_question_layout"
        android:layout_below="@+id/guidance_faq_listitem_question_layout"
        android:background="@drawable/milestone_listitem_bottom_curve">

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/guidance_faq_listitem_answer_text_view"
            style="@style/TextView_5dp_bold_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view12"
            android:padding="10dp"
            android:text="Answer"/>

    </RelativeLayout>
</RelativeLayout>