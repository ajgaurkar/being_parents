<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notificationDialogHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/milestone_listitem_title_expanded"
        android:gravity="bottom"
        android:maxLines="3"
        android:minLines="2"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingTop="2dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />


    <View
        android:id="@+id/view22"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notificationDialogHeaderTextView"
        android:background="#fff" />

    <TextView
        android:id="@+id/notificationDialogDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notificationDialogImageView"
        android:background="@drawable/notification_detail_description_bg"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="20"
        android:minLines="3"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp"
        android:paddingTop="2dp"
        android:text="Notification Dialog Description TextViewNotification Dialog Description TextViewNotification Dialog Description TextViewNotification Dialog Description TextView"
        android:textColor="@color/textDark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/notificationDialogImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/view22"
        android:layout_alignEnd="@+id/notificationDialogHeaderTextView"
        android:layout_alignRight="@+id/notificationDialogHeaderTextView"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/notification_dialog_circle_img_bg"
        android:padding="10dp"
        android:src="@drawable/syringe_50" />
</RelativeLayout>