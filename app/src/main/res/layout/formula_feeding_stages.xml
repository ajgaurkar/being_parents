<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.gms.ads.AdView
        android:id="@+id/formula_feeding_stages_adView"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/appbabybanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/formula_feeding_stages_adView">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingStart="10dp">

        <View
        android:id="@+id/view18"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


        <TextView
        android:id="@+id/formulaFeedMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView236"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|start"
        android:padding="5dp"
        android:text="Age-by-age guide to feeding"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/textView242"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/formulaFeedMainTextView"
        android:padding="5dp"
        android:text="Stage 1 : formula feeding for first 6 months \n(as company instruction)"
        android:textColor="#000"
        android:textStyle="bold" />

        <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView242"
        android:background="@drawable/tablelayout_shape">


        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:weightSum="30">


        <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:background="#b0b0b0"
        android:gravity="center_horizontal|start"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="Age of baby"
        android:textColor="#000" />

        <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark"
        android:weightSum="1">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#b0b0b0"
        android:gravity="center_vertical|start"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="One time feed"
        android:textColor="#000" />

        </TableRow>

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_light"
        android:weightSum="2">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#b0b0b0"
        android:gravity="center_vertical|start"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="Boiled water"
        android:textColor="#000" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#b0b0b0"
        android:gravity="center_vertical|start"
        android:text="No. of spoon"
        android:textColor="#000" />

        </TableRow>

        </TableLayout>

        <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="#b0b0b0"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="Feed per day"
        android:textColor="#000" />

        </TableRow>

        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="30">


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="First 2 weeks"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="90 ml"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="3"
        android:textColor="#000" />


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="6"
        android:textColor="#000" />


        </TableRow>


        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="30">


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="3rd and 4th  week"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="120 ml"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="4 "
        android:textColor="#000" />


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="5"
        android:textColor="#000" />


        </TableRow>

        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="30">


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="2 months"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="150 ml"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="5"
        android:textColor="#000" />


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="5"
        android:textColor="#000" />


        </TableRow>

        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="30">


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="3rd and 4th months"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="180 ml"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="6"
        android:textColor="#000" />


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="5"
        android:textColor="#000" />


        </TableRow>

        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="30">


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="5th and 6th months"
        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"

        android:gravity="center_vertical|start"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="210 ml"

        android:textColor="#000" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"

        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="7"
        android:textColor="#000" />


        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="5"
        android:textColor="#000" />


        </TableRow>


        </TableLayout>

        <TextView
        android:id="@+id/textView243"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Stage 2 : after 6 months till 1 year of age."
        android:textColor="#000"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/textView244"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView243"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="After 6 months introduce supplementary feeding along with formula feeding." />

        <TextView
        android:id="@+id/textView245"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView244"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Stage 3 : after 1 year till 18 months of age."
        android:textColor="#000"
        android:textStyle="bold" />

        <ImageView
        android:id="@+id/imageView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView245"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/formula_feed" />

        <TextView
        android:id="@+id/textView224"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView35"
        android:layout_marginBottom="50dp"
        android:text="Note :Use bowl and spoon to feed a baby. Use bottle for measurements only" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>