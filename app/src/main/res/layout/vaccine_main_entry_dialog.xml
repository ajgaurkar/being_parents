<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">


        <View
            android:id="@+id/view7"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/view7"
            android:layout_toStartOf="@+id/view7"
            android:gravity="center_vertical"
            android:text="Due date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView23"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/textView23"
            android:layout_toRightOf="@+id/textView23"
            android:gravity="center_vertical"
            android:text="Taken on"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/vaccineDialogDueEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView23"
            android:layout_alignStart="@+id/textView23"
            android:layout_below="@+id/textView23"
            android:layout_toLeftOf="@+id/view7"
            android:background="@drawable/alert_dialog_edit_text_bg"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:padding="5dp"
            android:text="12-Mar-2016" />

        <EditText
            android:id="@+id/vaccineDialogTakenDtEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView24"
            android:singleLine="true"
            android:layout_alignRight="@+id/textView24"
            android:layout_below="@+id/textView24"
            android:layout_marginEnd="10dp"
            android:editable="false"

            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/view7"
            android:layout_toRightOf="@+id/view7"
            android:background="@drawable/alert_dialog_edit_text_bg"
            android:gravity="center"
            android:hint="Select date"
            android:padding="5dp"/>

    </RelativeLayout>


</RelativeLayout>