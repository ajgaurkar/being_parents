<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingEnd="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingStart="20dp"
    android:paddingTop="5dp"
    android:weightSum="40">

    <ImageView
        android:id="@+id/vaccineStatusIconImageView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:src="@drawable/more32" />

    <TextView
        android:id="@+id/vaccineNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="18"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="5dp"
        android:text="Hepatitis ghsfhasdgfhdsagfh"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/vaccineTakendateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="12 Jan 15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/vaccineDueDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="22 Sep 16"
        android:textStyle="bold" />
</LinearLayout>