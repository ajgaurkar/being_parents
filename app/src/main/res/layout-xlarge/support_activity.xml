<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textNotifications"
        android:layout_alignTop="@+id/textNotifications"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:src="@drawable/notification_32" />

    <TextView
        android:id="@+id/textNotifications"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageView8"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp"
        android:text="Notifications"
        android:textSize="20sp" />

    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textNotifications"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#ccccca" />

    <View
        android:id="@+id/view30"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#ccccca" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/view29"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view28"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:src="@drawable/help_32" />

    <TextView
        android:id="@+id/textReportbugs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/view28"
        android:layout_toEndOf="@+id/imageView11"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp"
        android:text="Help"
        android:textSize="20sp" />

    <View
        android:id="@+id/view29"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textReportbugs"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#ccccca" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/view28"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/reportbug"
        android:layout_marginStart="10dp"
        android:padding="8dp"  />

    <TextView
        android:id="@+id/reportbug"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/view14"
        android:layout_toEndOf="@+id/imageView9"
        android:gravity="center_vertical|start"
        android:paddingStart="10dp"
        android:text="Report Bug"
        android:textSize="20sp" />

    <View
        android:id="@+id/view28"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reportbug"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#ccccca" />

    <Switch
        android:id="@+id/notificationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textNotifications"
        android:layout_alignEnd="@+id/view14"
        android:layout_alignTop="@+id/textNotifications" />

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/helpview"
        android:layout_above="@+id/view29"
        android:layout_alignLeft="@+id/textReportbugs"
        android:layout_alignStart="@+id/textReportbugs"
        android:layout_alignTop="@+id/textReportbugs"
        android:layout_toLeftOf="@+id/notificationSwitch"
        android:layout_toStartOf="@+id/notificationSwitch" />

</RelativeLayout>
