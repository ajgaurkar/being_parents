            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/milestone_listitem_motor_text_view"
            android:text="Adaptive" />

        <TextView
            android:id="@+id/milestone_listitem_adaptive_text_view"
            style="@style/TextView_5dp_italic_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/milestone_listitem_adaptive_text_view_header"
            android:text="New Text" />

        <TextView
            android:id="@+id/milestone_listitem_language_text_view_header"
            style="@style/TextView_5dp_bold_dark_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/milestone_listitem_adaptive_text_view"
            android:text="Language" />

        <TextView
            android:id="@+id/milestone_listitem_language_text_view"
            style="@style/TextView_5dp_italic_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/milestone_listitem_language_text_view_header"
