<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <com.google.android.gms.ads.AdView
        android:id="@+id/guidnace_sleeping_basics_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/appbabybanner"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/guidnace_sleeping_basics_adView"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp">


            <TextView
                android:id="@+id/sleeping_basic_TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:text="Snuggle Hold :"
                android:textColor="#4b4b4b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sleeping_basic_TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sleeping_basic_TextView1"
                android:padding="5dp"
                android:text="Snuggle Hold :"
                android:textColor="#4b4b4b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sleeping_basic_TextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sleeping_basic_TextView2"
                android:padding="5dp"
                android:text="Snuggle Hold :"
                android:textColor="#4b4b4b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sleeping_basic_TextView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sleeping_basic_TextView3"
                android:padding="5dp"
                android:text="Snuggle Hold :"
                android:textColor="#4b4b4b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sleeping_basic_TextView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sleeping_basic_TextView4"
                android:padding="5dp"
                android:text="Snuggle Hold :"
                android:textColor="#4b4b4b"
                android:textSize="16sp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>