<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_above="@+id/growth_main_AdView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/app_blue_panel_bg"
                android:orientation="vertical"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/growth_main_weight_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true">

                    <ImageView
                        android:id="@+id/imageButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView16"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:src="@drawable/weight_empty_50" />

                    <View
                        android:id="@+id/weightTabSelectedBar"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dp"
                        android:background="#fff" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="weight"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/growth_vertical_divider_white_bg" />

                <RelativeLayout
                    android:id="@+id/growth_main_head_circumference_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true">


                    <ImageView
                        android:id="@+id/imageButton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView17"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:padding="10dp"
                        android:src="@drawable/baby_head_64" />

                    <View
                        android:id="@+id/headTabSelectedBar"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:visibility="invisible" />


                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/headTabSelectedBar"
                        android:layout_toStartOf="@+id/headTabSelectedBar"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="Head"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/growth_vertical_divider_white_bg" />

                <RelativeLayout
                    android:id="@+id/growth_main_height_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true">


                    <ImageView
                        android:id="@+id/imageButton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView18"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:padding="13dp"
                        android:src="@drawable/lipids_win8_50" />

                    <View
                        android:id="@+id/heightTabSelectedBar"
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/heightTabSelectedBar"
                        android:layout_toStartOf="@+id/heightTabSelectedBar"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:text="Height"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/growth_main_section_indicator_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="Head circumference :"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/growth_main_value_indicator_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/growth_main_section_indicator_textView"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/growth_main_section_indicator_textView"
                    android:layout_toRightOf="@+id/growth_main_section_indicator_textView"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="152"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/growth_main_unit_indicator_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/growth_main_date_textView"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_toEndOf="@+id/growth_main_value_indicator_textView"
                    android:layout_toRightOf="@+id/growth_main_value_indicator_textView"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="cm"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/growth_main_value_indicator_textView"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/growth_main_unit_indicator_textView"
                    android:layout_toRightOf="@+id/growth_main_unit_indicator_textView"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="Measured on :"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/growth_main_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/chart"
                    android:layout_alignTop="@+id/textView22"
                    android:layout_toEndOf="@+id/textView22"
                    android:layout_toRightOf="@+id/textView22"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="12 Feb 16"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/growth_pop_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:src="@drawable/more_dots_24" />

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/growth_main_arc_progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    custom:arc_finished_color="#fff"
                    custom:arc_max="100"
                    custom:arc_stroke_width="10dp"
                    custom:arc_suffix_text="%"
                    custom:arc_text_color="#fff"
                    custom:arc_unfinished_color="#7e24999a" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/growth_main_section_indicator_textView" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/growth_main_AdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/appbabybanner" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addGrowthEntryFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/add_24" />
</RelativeLayout>